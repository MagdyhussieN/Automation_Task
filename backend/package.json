{
    "name": "todo-manager-backend",
    "version": "1.0.0",
    "description": "Backend for Todo Manager application",
    "main": "server.js",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "init-data": "node scripts/initData.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "dependencies": {
        "express": "^4.18.2",
        "cors": "^2.8.5",
        "body-parser": "^1.20.2",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "jest": "^29.7.0",
        "supertest": "^6.3.3"
    },
    "keywords": [
        "todo",
        "express",
        "nodejs"
    ],
    "author": "",
    "license": "MIT",
    "jest": {
        "testEnvironment": "node",
        "collectCoverageFrom": [
            "**/*.js",
            "!**/node_modules/**",
            "!**/coverage/**",
            "!**/tests/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    }
}